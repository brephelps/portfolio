          <div class="box-s">
            <pre><code class="language-ruby">
            puts &quot;Enter a number.&quot;
            # Collect a number from user and convert to positive integer
            number = gets.chomp.to_i
            last_two = number.to_s[-2..-1].to_i

            # Lop off the right-most digit and store it in a variable
            right_digit = number % 10


            # Assign ordinal
            if right_digit == 0 &amp;&amp; number != 0
                puts &quot;That's the #{number}th item!&quot;
            elsif right_digit == 1 &amp;&amp; (last_two &lt; 10 || last_two &gt; 20)
                puts &quot;That's the #{number}st item!&quot;
            elsif right_digit == 2 &amp;&amp; (last_two &lt; 10 || last_two &gt; 20)
                puts &quot;That's the #{number}nd item!&quot;
            elsif right_digit == 3 &amp;&amp; (last_two &lt; 10 || last_two &gt; 20)
                puts &quot;That's the #{number}rd item!&quot;
            elsif number &lt;= 0
                puts 'Please enter a number above 0'
            else
                puts &quot;That's the #{number}th item!&quot;
            end
            </code></pre>
